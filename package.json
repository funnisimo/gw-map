{
    "name": "gw-map",
    "version": "0.3.1",
    "description": "Map components for Roguelikes",
    "main": "dist/gw-map.js",
    "browser": "dist/gw-map.min.js",
    "module": "dist/gw-map.mjs",
    "types": "dist/gw-map.d.ts",
    "scripts": {
        "compile": "tsc --build tsconfig.json",
        "bundle": "rollup -c",
        "copy": "cp dist/gw-map.js docs/js && cp node_modules/gw-utils/dist/gw-utils.min.* docs/js && cp node_modules/rot-js/dist/rot.min.js docs/js",
        "build": "npm run compile && npm run bundle && npm run copy && npm run version",
        "serve": "cd docs && http-server -p 8080",
        "test": "jest",
        "coverage": "jest --coverage",
        "test-debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
        "version": "node -e 'const v = require(\"./package.json\").version; console.log(v);' > docs/VERSION"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/funnisimo/gw-map.git"
    },
    "keywords": [
        "roguelike",
        "map",
        "tile"
    ],
    "author": "Funnisimo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/funnisimo/gw-map/issues"
    },
    "homepage": "https://github.com/funnisimo/gw-map#readme",
    "devDependencies": {
        "@babel/types": "^7.12.11",
        "@jest/types": "^26.6.2",
        "gw-utils": "^0.3.1",
        "http-server": "^0.12.3",
        "jest": "^26.6.3",
        "jest-extended": "^0.11.5",
        "prettier": "^2.2.1",
        "rollup": "^2.35.1",
        "rollup-plugin-dts": "^2.0.1",
        "rollup-plugin-terser": "^7.0.2",
        "rot-js": "^2.1.5",
        "ts-jest": "^26.4.4",
        "typescript": "^4.1.3"
    },
    "peerDependencies": {
        "gw-utils": "^0.3.1"
    },
    "files": [
        "dist"
    ],
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    }
}
