{
    "name": "gw-map",
    "version": "0.5.0",
    "description": "Map components for Roguelikes",
    "main": "dist/gw-map.js",
    "browser": "dist/gw-map.min.js",
    "module": "dist/gw-map.mjs",
    "types": "dist/gw-map.d.ts",
    "scripts": {
        "compile": "tsc --build tsconfig.json",
        "bundle": "rollup -c",
        "copy": "npm run copy-docs && npm run copy-utils && npm run copy-map && npm run copy-dig",
        "copy-map": "cp dist/gw-map.js* docs/js",
        "copy-utils": "cp node_modules/gw-utils/dist/gw-utils.* docs/js",
        "copy-dig": "cp node_modules/gw-dig/dist/gw-dig.* docs/js",
        "copy-docs": "cp node_modules/gw-utils/docs/js/manual.js docs/js && cp node_modules/gw-utils/docs/css/* docs/css",
        "build": "npm run compile && npm run bundle && npm run copy && npm run version",
        "serve": "cd docs && http-server -p 8080",
        "test": "jest",
        "coverage": "jest --coverage",
        "test-debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
        "version": "node -e 'const v = require(\"./package.json\").version; console.log(v);' > docs/VERSION"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/funnisimo/gw-map.git"
    },
    "keywords": [
        "roguelike",
        "map",
        "tile"
    ],
    "author": "Funnisimo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/funnisimo/gw-map/issues"
    },
    "homepage": "https://github.com/funnisimo/gw-map#readme",
    "devDependencies": {
        "@babel/types": "^7.15",
        "@types/jest": "^27.0",
        "@rollup/plugin-node-resolve": "^13.0",
        "gw-utils": "^0.5",
        "gw-dig": "^0.5",
        "http-server": "^13.0",
        "jest": "^27.0",
        "jest-extended": "^0.11.5",
        "prettier": "^2.4",
        "rollup": "^2.61",
        "rollup-plugin-dts": "^4.0",
        "rollup-plugin-terser": "^7.0.2",
        "ts-jest": "^27.0",
        "typescript": "^4.5"
    },
    "peerDependencies": {
        "gw-utils": "^0.5"
    },
    "files": [
        "dist"
    ],
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    }
}
